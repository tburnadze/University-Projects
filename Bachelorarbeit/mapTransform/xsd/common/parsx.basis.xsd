			<xs:appinfo/>
		</xs:annotation>
		<xs:complexType mixed="true">
			<xs:choice minOccurs="0" maxOccurs="unbounded">
				<xs:group ref="meta_basis-verweis"/>
			</xs:choice>
			<xs:attributeGroup ref="globale_attribute"/>
		</xs:complexType>
	</xs:element>

	<xs:element name="institution">
		<xs:annotation>
			<xs:documentation xmlns="http://www.w3.org/1999/xhtml" source="dtd-meta_institution" xml:id="basis__institution">
				<div class="beschreibung">
					<p>Angabe von Institutionen innerhalb des <code>&lt;herausgeber&gt;</code>-Elements</p>
				</div>
			</xs:documentation>
			<xs:appinfo/>
		</xs:annotation>
